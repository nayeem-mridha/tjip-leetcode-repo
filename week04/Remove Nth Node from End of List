// TC : O(N)
// SC : O(1)

class Solution {
    public:
        void deleteNode(ListNode* delNode) {
            auto nxt = delNode -> next;
            *delNode = *(delNode -> next);
            delete(nxt);
        }
        ListNode* removeNthFromEnd(ListNode* head, int n) {
            auto first = head;
            auto second = head;
            ListNode* prv = NULL;

            while(n--) {
                first = first -> next;
            }

            while(first) {
                first = first -> next;
                prv = second;
                second = second -> next;
            }

            if (second -> next)
                deleteNode(second);
            else if (prv)
                prv -> next = NULL;
            else 
                return NULL;
            return head;
        }
}